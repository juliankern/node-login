extends ../templates/layout.pug

block content
    if user.hasRight('user.create')
        a(href=__('/user/new'))= __('Neuen Benutzer anlegen')
    table 
        thead
            tr
                th= __('Benutzername')
                th= __('E-Mail')
                th= __('Beigetreten')
                th &nbsp;
        tbody
            each u in users
                tr 
                    td= u.username
                    td= u.email
                    td= date.fromNow(u.createdAt, true)
                    td
                        a(href=__('/user') + '/' + u.username)= __('Profil')
                        if user.hasRight('user.edit.all')
                            a(href=__('/settings') + '/' + u.username)= __('Bearbeiten')