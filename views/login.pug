extends ../templates/layout.pug

block content
    form(method="post")
        input(type="email", name="email", placeholder= __('E-Mail'))
        input(type="password", name="pass", placeholder=__('Passwort'))
        input(type="checkbox", name="remember", id="remember")
        label(for="remember")= __('Eingeloggt bleiben')
        button(type="submit")= __('Login!')